# ================================
# Nevis Auth Backend — .env File
# ================================

# MongoDB connection string (from MongoDB Atlas or local)
MONGO_URI=YOUR_MONGODB_CONNECTION_STRING

# JWT secret key — make this long and random!
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_CHANGE_THIS

# Gmail credentials for sending password reset emails
# Use an App Password if you have 2FA enabled on Gmail
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Your frontend URL (used in reset email link)
SITE_URL=http://localhost:5500

# Server port (optional, defaults to 5000)
PORT=5000
